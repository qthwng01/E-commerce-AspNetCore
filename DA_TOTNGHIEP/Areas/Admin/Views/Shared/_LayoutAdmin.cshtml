@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin C&T Shop</title>

    <link rel="apple-touch-icon" sizes="180x180" href="~/assetsUser/img/logomain (3).png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assetsUser/img/logomain (2).png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assetsUser/img/logomain (1).png">
    <link rel="manifest" href="~/assetsUser/img/logomain (1).ico">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assetsAdmin/css/bootstrap.css">
    <link rel="stylesheet" href="~/assetsAdmin/vendors/iconly/bold.css">
    <link rel="stylesheet" href="~/assetsAdmin/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/assetsAdmin/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="~/assetsAdmin/css/app.css">
    <link rel="stylesheet" href="~/assetsAdmin/css/pages/modal.css">
    <link rel="shortcut icon" href="~/assetsAdmin/images/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="~/assetsAdmin/css/loading.css" />
</head>
<body>
    <div id="app">
        <div id="sidebar" class="active">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header">
                    <div class="d-flex justify-content-center">
                        <div class="logo">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><img src="~/assetsAdmin/images/logo/logoC&T.png" style=" height: 3rem;" alt="Logo" srcset=""></a>
                        </div>
                        <div class="toggler">
                            <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
                        </div>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        <li class="sidebar-title">Menu</li>

                        <li class="sidebar-item  ">
                            <a asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-grid-fill"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class='bx bxs-notepad'></i>
                                <span>Hoá đơn</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a asp-controller="Invoices" asp-action="Index">Danh sách hoá đơn</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="Invoices" asp-action="Pending">Hoá đơn mới(chờ duyệt)</a>
                                </li>
                            </ul>
                        </li>
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class='bx bxl-product-hunt'></i>
                                <span>Sản phẩm</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a asp-controller="Products" asp-action="Index">Danh sách sản phẩm</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="ProductTypes" asp-action="Index">Danh sách loại sản phẩm</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="ImageProducts" asp-action="Index">Danh sách hình ảnh sản phẩm</a>
                                </li>

                            </ul>
                        </li>
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class='bx bxs-user-account'></i>
                                <span>Tài khoản</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a asp-controller="UserRoles" asp-action="Index">Cấp quyền</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="RoleManager" asp-action="Index">Quản lý quyền truy cập</a>
                                </li>
                            </ul>
                        </li>
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class='bx bxs-receipt'></i>
                                <span>Thống kê báo cáo</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a asp-controller="StatiscalInvoices" asp-action="Index">Thống kê doanh thu</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="ProductStatistics" asp-action="Index">Thống kê sản phẩm</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="UserStatistics" asp-action="Index">Thống kê người dùng</a>
                                </li>
                            </ul>
                        </li>
                        <li class="sidebar-item  has-sub">
                            <a href="#" class='sidebar-link'>
                                <i class='bx bxs-package'></i>
                                <span>Quản lý kho</span>
                            </a>
                            <ul class="submenu ">
                                <li class="submenu-item ">
                                    <a asp-controller="Warehouses" asp-action="Index">Danh sách kho</a>
                                </li>
                                <li class="submenu-item ">
                                    <a asp-controller="ImportWarehouses" asp-action="Index">Danh sách phiếu nhập kho</a>
                                </li>
                                @*<li class="submenu-item ">
                                        <a asp-controller="WarehouseDetails" asp-action="Index">Danh sách lô</a>
                                    </li>*@
                            </ul>
                        </li>

                    </ul>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        <div id="main" class='layout-navbar'>
            <header class='mb-3'>
                <nav class="navbar navbar-expand navbar-light ">
                    <div class="container-fluid">
                        <a href="#" class="burger-btn d-block">
                            <i class="bi bi-justify fs-3"></i>
                        </a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                                <li class="nav-item dropdown me-1">
                                    <a class="nav-link active dropdown-toggle" href="#" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        <i class='bi bi-envelope bi-sub fs-4 text-gray-600'></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <h6 class="dropdown-header">Mail</h6>
                                        </li>
                                        <li><a class="dropdown-item" href="#">No new mail</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown me-3">
                                    <a class="nav-link active dropdown-toggle" href="#" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        <i class='bi bi-bell bi-sub fs-4 text-gray-600'></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                        <li>
                                            <h6 class="dropdown-header">Notifications</h6>
                                        </li>
                                        <li><a class="dropdown-item">No notification available</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="dropdown">
                                <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-menu d-flex">
                                        <div class="user-name text-end me-3">
                                            <h6 class="mb-0 text-gray-600">C & T</h6>
                                            <p class="mb-0 text-sm text-gray-600">Quản trị</p>
                                        </div>
                                        <div class="user-img d-flex align-items-center">
                                            <div class="avatar avatar-md">
                                                <img src="~/assetsAdmin/images/faces/1.jpg">
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton" style="min-width: 11rem;">
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <li>
                                            <h6 class="dropdown-header">Hello, @UserManager.GetUserName(User)</h6>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="icon-mid bi bi-person me-2"></i>
                                                Hồ sơ
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="icon-mid bi bi-gear me-2"></i>
                                                Cài đặt
                                            </a>
                                        </li>

                                        <li>

                                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                                <button type="submit" class="dropdown-item"><i class="icon-mid bi bi-box-arrow-left me-2"></i>Đăng xuất</button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
            <div id="main-content">

                <div class="page-heading">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-12 col-md-6 order-md-1 order-last">
                                <h3>Thống Kê</h3>

                            </div>
                        </div>
                    </div>
                    <section class="section">
                        <div class="page-content">
                            <section class="row">
                                <div class="col-12 col-lg-12">
                                    <div class="row">
                                        <div class="col-6 col-lg-3 col-md-6">
                                            <div class="card">
                                                <div class="card-body px-3 py-4-5">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="stats-icon purple">
                                                                <i class="iconly-boldShow"></i>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <h6 class="text-muted font-semibold">Tổng sản phẩm</h6>
                                                            <h6 class="font-extrabold mb-0"> @ViewBag.CountProduct </h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 col-lg-3 col-md-6">
                                            <div class="card">
                                                <div class="card-body px-3 py-4-5">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="stats-icon blue">
                                                                <i class="iconly-boldProfile"></i>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <h6 class="text-muted font-semibold">Số lượng tồn kho</h6>
                                                            <h6 class="font-extrabold mb-0"> @ViewBag.CountStock </h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 col-lg-3 col-md-6">
                                            <div class="card">
                                                <div class="card-body px-3 py-4-5">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="stats-icon green">
                                                                <i class="iconly-boldAdd-User"></i>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <h6 class="text-muted font-semibold">Tổng doanh thu</h6>
                                                            <h6 class="font-extrabold mb-0">@ViewBag.TongDoanhThu</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 col-lg-3 col-md-6">
                                            <div class="card">
                                                <div class="card-body px-3 py-4-5">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="stats-icon red">
                                                                <i class="iconly-boldBookmark"></i>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-8">
                                                            <h6 class="text-muted font-semibold">Số lượng đã bán</h6>
                                                            <h6 class="font-extrabold mb-0">@ViewBag.SoLuongDaBan</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @RenderBody()

                                </div>

                            </section>
                        </div>
                    </section>
                </div>

                @*Modal CRUD*@
                <div class="modal" tabindex="-1" role="dialog" id="form-modal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content" style="margin:30px 0 0 -127px;width: 170%;">
                            <div class="modal-header" style="border-bottom: none; padding: 0px; ">
                                <h2 class="modal-title"></h2>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true"><i class="fa-solid fa-xmark" style="height:25px;width:25px; "></i></span>
                                </button>
                            </div>
                            <div class="modal-body" id="printThis">

                            </div>
                        </div>
                    </div>
                </div>
                @*Modal CRUD*@

                <div class="loaderbody" id="loaderbody">
                    <div class="loader"></div>
                </div>

                <footer>
                    <div class="footer-bot">
                        <p>Dev by C & T</p>
                    </div>
                    @*<div class="footer clearfix mb-0 text-muted">
                            <div class="float-start">
                                <p>2021 &copy; Mazer</p>
                            </div>
                            <div class="float-end">
                                <p>
                                    Crafted with <span class="text-danger"><i class="bi bi-heart-fill icon-mid"></i></span>
                                    by <a href="https://ahmadsaugi.com">Saugi</a>
                                </p>
                            </div>
                        </div>*@
                </footer>
            </div>
        </div>
    </div>
    <script src="~/assetsAdmin/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/assetsAdmin/js/bootstrap.bundle.min.js"></script>
    <script src="~/assetsAdmin/js/plugins.js"></script>
    <script src="~/assetsAdmin/js/main.js"></script>
    <script src="~/assetsAdmin/vendors/apexcharts/apexcharts.js"></script>
    <script src="~/assetsAdmin/js/pages/dashboard.js"></script>
    <script src="~/assetsAdmin/js/pages/ui-apexchart.js"></script>
    <script src="~/assetsAdmin/js/mazer.js"></script>
    <script src="~/assetsAdmin/js/site.js" asp-append-version="true"></script>
    <script src="~/assetsAdmin/js/vendors.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
</body>
</html>


