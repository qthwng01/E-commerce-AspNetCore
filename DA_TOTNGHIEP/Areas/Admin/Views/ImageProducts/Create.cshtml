@model DA_TOTNGHIEP.Models.ImageProduct

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<h3>Tạo hình ảnh</h3>
<hr />
<div class="row">
    <form asp-action="Create" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CodeImage" class="control-label"></label>
            <input asp-for="CodeImage" class="form-control" required/>
            <span asp-validation-for="CodeImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <h6 style="color:red">*Chọn tối đa 5 ảnh*</h6>
        </div">
        <div class="form-group">
            <label asp-for="ImageName" class="control-label" style="color:black"></label>
            <input asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageName" class="text-danger">
            </span>
        </div>
        <div class="form-group">
            <label asp-for="ImageName1" class="control-label"></label>
            <input asp-for="ImageFile1" class="form-control" />
            <span asp-validation-for="ImageName1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageName2" class="control-label"></label>
            <input asp-for="ImageFile2" class="form-control" />
            <span asp-validation-for="ImageName2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageName3" class="control-label"></label>
            <input asp-for="ImageFile3" class="form-control" />
            <span asp-validation-for="ImageName3" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageName4" class="control-label"></label>
            <input asp-for="ImageFile4" class="form-control" />
            <span asp-validation-for="ImageName4" class="text-danger"></span>
        </div>
        @*<div class="form-group">
            <label asp-for="ProductsId" class="control-label"></label>
            <select asp-for="ProductsId" class="form-control" asp-items="ViewBag.ProductsId">
            </select>
            <span asp-validation-for="ProductsId" class="text-danger"></span>
        </div>*@
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
            </label>
        </div>
        <div class="form-group" style="text-align:center">
            <input type="submit" value="Tạo mới" class="btn btn-primary" />
        </div>
    </form>
</div>


