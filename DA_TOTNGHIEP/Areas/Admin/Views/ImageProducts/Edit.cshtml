@model DA_TOTNGHIEP.Models.ImageProduct

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<h3>Sửa hình ảnh</h3>
<hr />

<form asp-action="Edit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="CodeImage" class="control-label"></label>
        <input asp-for="CodeImage" class="form-control" />
        <span asp-validation-for="CodeImage" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <span style="color:red">*<label asp-for="ImageName" class="control-label" style="color:red"></label>*</span>
                <img src="~/assetsAdmin/imgProducts/@Model.ImageName" style="width: 130px;height:130px" alt="" />
                @if (Model.ImageFile == null)
                {
                    <input type="hidden" asp-for="@Model.ImageName" class="form-control" />
                    <input asp-for="ImageFile" class="form-control" />
                }
                else
                {
                    <input asp-for="ImageFile" class="form-control" />
                }
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageName2" class="control-label"></label>
                <img src="~/assetsAdmin/imgProducts/@Model.ImageName2" style="width: 130px; height: 130px" alt="" />
                @if (Model.ImageFile2 == null)
                {
                    <input type="hidden" asp-for="@Model.ImageName2" class="form-control" />
                    <input asp-for="ImageFile2" class="form-control" />
                }
                else
                {
                    <input asp-for="ImageFile2" class="form-control" />
                }
                <span asp-validation-for="ImageName2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageName4" class="control-label"></label>
                <img src="~/assetsAdmin/imgProducts/@Model.ImageName4" style="width: 130px; height: 130px" alt="" />
                @if (Model.ImageFile4 == null)
                {
                    <input type="hidden" asp-for="@Model.ImageName4" class="form-control" />
                    <input asp-for="ImageFile4" class="form-control" />
                }
                else
                {
                    <input asp-for="ImageFile4" class="form-control" />
                }
                <span asp-validation-for="ImageName4" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ImageName1" class="control-label"></label>
                <img src="~/assetsAdmin/imgProducts/@Model.ImageName1" style="width: 130px; height: 130px" alt="" />
                @if (Model.ImageFile1 == null)
                {
                    <input type="hidden" asp-for="@Model.ImageName1" class="form-control" />
                    <input asp-for="ImageFile1" class="form-control" />
                }
                else
                {
                    <input asp-for="ImageFile1" class="form-control" />
                }
                <span asp-validation-for="ImageName1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageName3" class="control-label"></label>
                <img src="~/assetsAdmin/imgProducts/@Model.ImageName3" style="width: 130px; height: 130px" alt="" />
                @if (Model.ImageFile3 == null)
                {
                    <input type="hidden" asp-for="@Model.ImageName3" class="form-control" />
                    <input asp-for="ImageFile3" class="form-control" />
                }
                else
                {
                    <input asp-for="ImageFile3" class="form-control" />
                }
                <span asp-validation-for="ImageName3" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
        </div>
        <div class="form-group" style="text-align:center">
            <input type="submit" value="Sửa" class="btn btn-primary" />
        </div>
</form>
</div>


