    <link rel="icon" type="image/png" sizes="32x32" href="~/assetsUser/img/logomain (2).png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assetsUser/img/logomain (1).png">
    <link rel="manifest" href="~/assetsUser/img/logomain (1).ico">

    <link rel="stylesheet" href="~/assetsUser/assets/css/layoutss.css">
    <link rel="stylesheet" href="~/assetsUser/assets/css/adss.css">
    <link rel="stylesheet" href="~/assetsUser/assets/css/product.css">
    <link href="~/assetsUser/assets/css/login.css" rel="stylesheet" />
